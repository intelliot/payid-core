{
  "name": "payid-core",
  "version": "0.1.0",
  "description": "Simple PayID utility functions",
  "files": [
    "dist/*",
    "build/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
  "dependencies": {
    "@types/node-fetch": "^2.5.7",
    "node-fetch": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:intelliot/payid-core.git"
  },
  "prepublish": "tsc",
  "prepublishOnly": "eslint . --ext .ts && jest",
  "scripts": {
    "compile": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "docs": "tsc && jsdoc2md --template README.hbs --files dist/index.js > README.md && typedoc src/index.ts && cp .nojekyll docs"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/node": "^13.1.8",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.2.4",
    "jsdoc-to-markdown": "^6.0.1",
    "prettier": "^1.19.1",
    "ts-jest": "^25.3.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": ">= 10"
  }
}
